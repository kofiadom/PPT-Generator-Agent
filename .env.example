# LangGraph PPTX Workflow Configuration

# Anthropic API Key (required for LLM stages)
ANTHROPIC_API_KEY=your_api_key_here

# Database for Checkpointing (SQLite by default)
# SQLite: Just a filename or path
DATABASE_URL=checkpoints.db

# For PostgreSQL (production only):
# DATABASE_URL=postgresql://user:password@host:port/database

# LLM Configuration
LLM_MODEL=claude-sonnet-4-5
LLM_TEMPERATURE=0.7

# Workflow Configuration
WORKSPACE_ROOT=outputs
MAX_RETRIES=3
ENABLE_INTERRUPTS=false

# Logging
LOG_LEVEL=INFO